<div class="posts_index_post_and_comment_container">
    <div class="posts_index_user_posts_container">
        <a href="/users/<%=user.id%>/posts/<%=post.id%>">
            <h3 class="posts_index_user_post_title"><%=post.title%></h3>
        </a>
        <p><%=post.text%></p>      
        <p class="posts_index_user_post_stats">
            <%= "Comments: #{post.comments_counter}, Likes: #{post.likes_counter}"%>
        </p>
    </div>
    <div class="posts_index_user_comments_container">   
        <%="No comments for this post yet" if post.comments_counter == 0%>
        <%post.recent_comments.each do |comment|%>
            <%if comment.post_id == post.id%>
                <%if comment.author_id == user.id%>
                    <%= "#{user.name}: #{comment.text}"%> <br/>
                <%end%>
            <%end%>
        <%end%>
    </div>
</div>