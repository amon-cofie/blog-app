<div>
    <div>
        <a href="/users/<%=user.id%>/posts/<%=post.id%>">
            <p><%=post.title%></p>
        </a>
        <p><%=post.text%></p>

        

        <div>
            <p>Comments: <%=post.comments_counter%></p>
            <p>Likes: <%=post.likes_counter%></p>
        </div>


    </div>


    <div>
    
        <%comments.each do |comment|%>

            <%if comment.post_id == post.id%>
                <%if comment.author_id == user.id%>
                    <%= "#{user.name}: #{comment.text}"%> <br/>
                <%end%>
            <%end%>
        <%end%>

    </div>

</div>