<h1> Add new post </h1>

<%= form_with model: @post, url: user_posts_path do |f|%>
    <div>
        <%= f.label :Title %><br>
        <%= f.text_field :title %>
    </div>
    <br>

    <div>
        <%= f.label :Text %><br>
        <%= f.text_field :text %>
    </div>
    <br>

    <%= f.submit 'Add post' %><br>
<% end %> 